<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.byronworkshop">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="false">
        <activity
            android:name=".ui.mainactivity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.detailsactivity.DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName=".ui.mainactivity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.byronworkshop.ui.mainactivity.MainActivity" />
        </activity>
        <activity
            android:name=".ui.reports.income.IncomeActivity"
            android:label="@string/title_activity_income"
            android:parentActivityName=".ui.mainactivity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.byronworkshop.ui.mainactivity.MainActivity" />
        </activity>
        <activity
            android:name=".ui.reports.reminders.RemindersActivity"
            android:label="@string/activity_reminders_title"
            android:parentActivityName=".ui.mainactivity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.byronworkshop.ui.mainactivity.MainActivity" />
        </activity>
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/activity_title_settings"
            android:parentActivityName=".ui.mainactivity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.byronworkshop.ui.mainactivity.MainActivity" />
        </activity>

        <service
            android:name=".ui.reports.reminders.scheduler.ReminderNotificationsFirebaseJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>

    </application>
</manifest>