<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dialog_edit_uploaded_images_rv_card_margin_vertical"
    android:layout_marginEnd="@dimen/dialog_edit_uploaded_images_rv_card_margin_horizontal"
    android:layout_marginLeft="@dimen/dialog_edit_uploaded_images_rv_card_margin_horizontal"
    android:layout_marginRight="@dimen/dialog_edit_uploaded_images_rv_card_margin_horizontal"
    android:layout_marginStart="@dimen/dialog_edit_uploaded_images_rv_card_margin_horizontal"
    android:layout_marginTop="@dimen/dialog_edit_uploaded_images_rv_card_margin_vertical"
    android:maxWidth="@dimen/dialog_edit_uploaded_images_rv_card_max_width">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dialog_edit_uploaded_images_rv_item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_edit_uploaded_images_rv_item_image_height"
            android:contentDescription="@string/dialog_edit_uploaded_images_rv_item_image_desc"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_edit_uploaded_images_rv_item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dialog_edit_uploaded_images_rv_item_margin_vertical"
            android:layout_marginEnd="@dimen/dialog_edit_uploaded_images_rv_item_margin_horizontal"
            android:layout_marginLeft="@dimen/dialog_edit_uploaded_images_rv_item_margin_horizontal"
            android:layout_marginRight="@dimen/dialog_edit_uploaded_images_rv_item_margin_horizontal"
            android:layout_marginStart="@dimen/dialog_edit_uploaded_images_rv_item_margin_horizontal"
            android:layout_marginTop="@dimen/dialog_edit_uploaded_images_rv_item_margin_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toStartOf="@+id/dialog_edit_uploaded_images_rv_item_more_options"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/dialog_edit_uploaded_images_rv_item_more_options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_edit_uploaded_images_rv_item_image"
            tools:text="MÃ­ercoles, 21 Mayo 2018" />

        <ImageView
            android:id="@+id/dialog_edit_uploaded_images_rv_item_more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/dialog_edit_uploaded_images_rv_item_more_options_desc"
            android:padding="@dimen/dialog_edit_uploaded_images_rv_item_more_options_padding"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_edit_uploaded_images_rv_item_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dialog_edit_uploaded_images_rv_item_date"
            app:srcCompat="@drawable/ic_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>